  {
    href: "https://instagram.com/mikeshouse.tv",
    imgSrc:
      "https://s3.amazonaws.com/mikechella.com/static/Instagram_Glyph_White.svg",
    title: "link to mikeshouse.tv Instagram",
    altText: "svg icon for Instagram",
  },
  {
    href: "https://youtube.com/@thankyoumikezilla",
    imgSrc:
      "https://s3.amazonaws.com/mikechella.com/static/yt_icon_mono_dark.png",
    title: "link to thankyoumikezilla on youtube",
    altText: "png icon for YouTube",
  },
  {
    href: "https://twitch.tv/thankyoumikezilla",
    imgSrc:
      "https://s3.amazonaws.com/mikechella.com/static/TwitchGlitchWhite.svg",
    title: "link to thankyoumikezilla on twitch",
    altText: "svg icon for Twitch",
  },
  {
    href: "https://kick.com/thankyoumikezilla",
    imgSrc: "https://s3.amazonaws.com/mikechella.com/static/Kick_logo.svg",
    title: "link to thankyoumikezilla on kick",
    altText: "svg icon for Kick",
