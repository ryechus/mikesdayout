<div class="links">
	<a
		id="get_tickets"
		href="https://ticketscandy.com/e/mikes-day-out-2024-4566?aff=mikes_day_out_com"
		>get tickets</a
	>
</div>
<style>
	.links {
		text-align: center;
	}
	a,
	a:visited,
	a:active,
	a:hover {
		color: unset;
		font-size: 1.25em;
	}
</style>
<script>
	const currentHref = window.location.search;

	const searchParams = new URLSearchParams(currentHref);
	const utmSource = searchParams.get("utm_source");
	let affSuffix = "";
	if (utmSource !== null) {
		affSuffix = `_${utmSource}`;
	}

	const getTicketsElement = document.getElementById("get_tickets");
	const getTicketsHref = new URL(getTicketsElement.getAttribute("href"));

	const currentAff = getTicketsHref.searchParams.get("aff");
	getTicketsHref.searchParams.set("aff", `${currentAff}${affSuffix}`);

	getTicketsElement.setAttribute("href", getTicketsHref.href);
</script>
